#include <iostream>
#include <math.h>
#include <stdlib.h>
#include <iomanip>
using namespace std;
int main()
{
    int mas[100][100], n, naim(0), sum(0), stolb(0);
    cin>>n;
    cout<<"Matrix"<<endl;
    for(int i=0; i<n; i++)                  //заполнение матрицы
    {   
        for(int j=0; j<n; j++)
        {
            mas[i][j]=rand()%200-100;            //[-99; 99]
            cout<<setw(5)<<mas[i][j];
        }
        if(mas[i][0]<0 && mas[i][0]%2==1)
            naim+=fabs(mas[i][0]);
        cout<<endl;        
    }
    cout<<endl<<endl;        
    for(int i=1; i<n; i++)                          
    {    
        for(int j=0; j<n; j++)
            if(mas[j][i]<0 && mas[j][i]%2==1)
                sum+=fabs(mas[j][i]);
        if(sum<naim)
        {   
            naim=sum;
            for(int k=i; k<n; k++)
                for(int h=i-1; h<n; h++)
            
        }    
    }
        
        
    return 0;
}
