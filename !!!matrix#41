#include <iostream>
#include <stdlib.h>
#include <iomanip>
#include <time.h>
using namespace std;
int main()
{
    int mas[100][100], n, diag(1);
    cin>>n;
    srand(time(NULL));
    cout<<"Matrix"<<endl;
    for(int i=0; i<n; i++)                  //заполнение матрицы
    {   
        for(int j=0; j<n; j++)
        {
            mas[i][j]=rand()%200-100;            //[-99; 99]
            cout<<setw(5)<<mas[i][j];
        }
        cout<<endl;        
    }
    cout<<endl<<endl;        

    for(int j=0; j<n; j++)                          //фиксирование столбца (строки) элемента 
        for(int k=0; k<n; k++)                          //проход по матрице для сортировки
            if(k==0)                                        //если текущий элемент находится в нулевой строке
            {
                for(int h=j+1; h<n; h++)                        
                    if(mas[k][h]>mas[0][j])
                        swap(mas[0][j], mas[k][h]);             //перестановка самых больших по величине элементов ТОЛЬКО в нулевую строку методом пузырька
            }
            else                                                //если текущий элемент НЕ находится в i строке
                for(int h=0; h<n; h++)                          
                    if(mas[k][h]>mas[0][j])
                        swap(mas[0][j], mas[k][h]);             
    

    for(int j=1; j<n; j++)
    {
        swap(mas[0][j], mas[diag][diag]);                       //последовательная перестановка элементов с нулевой строки на глав диагональ
        diag++;   
    } 
    
    for(int i=0; i<n; i++)                      //вывод матрицы
    {    
        for(int j=0; j<n; j++)
            cout<<setw(5)<<mas[i][j];
        cout<<endl; 
    }
    return 0;
}

