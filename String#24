#include <iostream>
#include <string>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");               
    string s, sort("");
    int n(1), first(0), flag(0);            
    cout<<"Введите строку"<<endl;
    getline(cin, s);   
    for(int i=0; i<s.size();)
    {
        if(s[i+1]==' ' || i+1>=s.size())            //если текущий символ последний в слове или последний в строке
        {
            if(sort.empty()==false && flag==0)	    //если есть болле одного слова с буквами в алфавитном порядке
            {
                if(s.substr(first, n)>=sort)        //сравнение слов с буквами в алфавитном порядке
                {
                    sort.clear();                   //очистка строки для нового слова
                    sort+=s.substr(first, n);       //копирование нового слова
                }
            }        
            else                                    //однократное условие
                if(flag==0) sort+=s.substr(first, n);//первое найденое слово с буквами в алфавитном порядке
            i++;                                    //индекс пробела после текущего слова
            while(s[i]==' ' && i<s.size()) i++;     //пропуск пробелов после текущего слова
            first=i;                                //индекс первой буквы след слова 
            flag=0;                                 //подготовка к след итерации
            n=1;                                    //подготовка к след итерации
        }
        else
        {
            if(s[i]>s[i+1])                     //проверка слова на алфавитный порядок букв      
                flag=1;                         //флажок 
            n++; i++;                           //кол-во букв в слове и след итерация  
        }    
    }
    if(sort.empty()==false)                     //если есть слова с буквами в алф порядке
        cout<<"Последнее в лексикографическом порядке: "<<sort<<endl;
    return 0;
}
/*
ТЕСТЫ:
"abcd  bad  abc  fad  abcde  ab"
Последнее в лексикографическом порядке: "abcde"
------------------------------------------------
"bad ced abc   abcde bcd xyz"
Последнее в лексикографическом порядке: "xyz"
------------------------------------------------
"kekk opq  efa   syz  ckm zad"
Последнее в лексикографическом порядке: "syz"
*/
