#include <iostream>
#include <stdlib.h>
#include <iomanip>
using namespace std;
int main()
{
    int n(10);
    int mas[n][n], sumStrok(0), stroka, stolb, sumStolb(0), naimStolb(0), naibStrok(0);
    for(int i=0; i<n; i++)
    {
        for(int j=0; j<n; j++)
        {
            mas[i][j]=rand()%21-10;         //[-10 10]
            cout<<setw(5)<<mas[i][j];
        }
        cout<<endl;
        naibStrok+=mas[0][i];
        naimStolb+=mas[i][0];
    }
    cout<<"------------------------------------------------------------------"<<endl;
    for(int i=1; i<n; i++)
    {    
        for(int j=1; j<n; j++)
        {
            sumStrok+=mas[i][j];
            sumStolb+=mas[j][i];
        }
        if(sumStrok>naibStrok || sumStolb<naimStolb)
            if(sumStrok>naibStrok)
                {  naibStrok=sumStrok; stroka=i; }
            else
                if(sumStolb<naimStolb)
                    { naimStolb=sumStolb; stolb=i; }
    }
    
    for(int i=stroka; i<n; i++)
        for(int j=0; j<n; j++)
            mas[i][j]=mas[i+1][j];
                
    for(int i=stolb; i<n; i++)
        for(int j=0; j<n; j++)
            mas[j][i]=mas[j][i+1];        

    for(int i=0; i<n-1; i++)
    {
        for(int j=0; j<n-1; j++)
            cout<<setw(5)<<mas[i][j];
        cout<<endl;
    }
    return 0;
}
