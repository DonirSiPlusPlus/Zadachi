#include <iostream>
#include <string>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");
    string S1, s2("");
    cout<<"Введите строку"<<endl;
    while(cin>>S1)                      //ввод слов ("ctrl+z" для завершения ввода) 
    {
        for(int i=0; i<S1.size()-1;)    //фиксация первой буквы в слове
        {
            for(int j=i+1; j++;)        //проход по слову 
            {
                if(S1[i]==S1[j])        //поиск совпадений с первой буквой
                {                      
                    s2+=S1+' ';         //копирование слова во вторую строку
                    break;              //остановка поиска 
                }
                else
                    if(S1[j]==' ')      //конец слова
                        break;
            }
            while(S1[i]!=' ' && i<S1.size()-1)//переход к пробелу если в слове было найдено совпадение
                i++;
            while(S1[i]==' ' && i<S1.size()-1)//вычисление первой буквы следующего слова если стоят несколько пробелов
                i++;
        }        
    }
    
    cout<<"Слова с совпадениями"<<endl<<s2;  // вывод строки 
    return 0;
}
/*
ТЕСТ 
kijk yhgt ikolk 
kijk ikolk 
*/
