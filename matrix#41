#include <iostream>
#include <stdlib.h>
#include <iomanip>
using namespace std;
int main()
{
    int mas[100][100], n, diag(1);
    cin>>n;
    cout<<"Matrix"<<endl;
    for(int i=0; i<n; i++)                  //заполнение матрицы
    {   
        for(int j=0; j<n; j++)
        {
            mas[i][j]=rand()%200-100;            //[-99; 99]
            cout<<setw(5)<<mas[i][j];
        }
        cout<<endl;        
    }
    cout<<endl<<endl;        
    for(int i=0; i<n; i++)
    {    
        for(int j=0; j<n; j++)
            for(int k=i; k<n; k++)
                if(k==i)
                {
                    for(int h=j+1; h<n; h++)
                        if(mas[k][h]>mas[i][j])
                            swap(mas[i][j], mas[k][h]);
                }
                else
                    for(int h=0; h<n; h++)
                        if(mas[k][h]>mas[i][j])
                            swap(mas[i][j], mas[k][h]);
        //diag++;
    }
    for(int i=0; i==0; i++)
        for(int j=1; j<n; j++)
        {
            swap(mas[i][j], mas[diag][diag]);
            diag++;   
        }    
    for(int i=0; i<n; i++)
    {    
        for(int j=0; j<n; j++)
            cout<<setw(5)<<mas[i][j];
        cout<<endl; 
    }
    return 0;
}
