#include <iostream>
#include <stdlib.h>
#include <iomanip>
using namespace std;
int main()
{
    int mas[100][100], n, diag(1);
    cin>>n;
    cout<<"Matrix"<<endl;
    for(int i=0; i<n; i++)                  //заполнение матрицы
    {   
        for(int j=0; j<n; j++)
        {
            mas[i][j]=rand()%200-100;            //[-99; 99]
            cout<<setw(5)<<mas[i][j];
        }
        cout<<endl;        
    }
    cout<<endl<<endl;        
    for(int i=0; i==0; i++)                          //фиксирование строки элемента ( (i==0)-перестановка ТОЛЬКО в первую строку)
        for(int j=0; j<n; j++)                          //фиксирование столбца элемента
            for(int k=i; k<n; k++)                          //проход по матрице для сортировки
                if(k==i)                                        //если текущий элемент находится в i строке
                {
                    for(int h=j+1; h<n; h++)                        
                        if(mas[k][h]>mas[i][j])
                            swap(mas[i][j], mas[k][h]);             //перестановка самых больших по величине элементов в 1-ую строку методом пузырька
                }
                else                                                //если текущий элемент НЕ находится в i строке
                    for(int h=0; h<n; h++)                          
                        if(mas[k][h]>mas[i][j])
                            swap(mas[i][j], mas[k][h]);             //перестановка самых больших по величине элементов в 1-ую строку методом пузырька
    
    for(int i=0; i==0; i++)
        for(int j=1; j<n; j++)
        {
            swap(mas[i][j], mas[diag][diag]);                       //перестановка самых больших по величине элементов на глав диагональ
            diag++;   
        } 
    
    for(int i=0; i<n; i++)                      //вывод матрицы
    {    
        for(int j=0; j<n; j++)
            cout<<setw(5)<<mas[i][j];
        cout<<endl; 
    }
    return 0;
}

