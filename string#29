#include <iostream>
#include <string>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");               
    string s, word("");
    int n(0), first(0), flag(0);            
    cout<<"Введите строку"<<endl;
    getline(cin, s);   
    for(int i=0; i<s.size();)
    {
        if(s[i]==' ')
            { 
                word+=s.substr(first, n);
                while(s[i]==' ' && i<s.size())  //пропуск пробелов после слова
                    i++;
                first=i;  n=0;  
                for(int j=i; j<s.size();)
                    if(s[j]==' ')
                    {
                        cout<<'X'+s.substr(first, n)+'X'<<endl;
                        if(s.substr(first, n)==word)
                            { flag=1; break; }
                        while(s[j]==' ' && j<s.size())  //пропуск пробелов после слова
                            j++;
                        first=j; n=0;    
                    }
                    else
                        { n++; j++; }
                first=i;  n=0;
                //if(!flag)
                    //cout<<word<<endl;
                word.clear(); flag=0;
            }
        else
            { n++; i++; }
    }    
    return 0;
}
