#include <iostream>
#include <string>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");
    string s;
    cout<<"Введите строку"<<endl;
    getline(cin, s);
    int first(0), i(1);
    while(i<s.size())
    {   
        if(s[i]==s[first])                          //поиск букв в слове совпадающих с первой
        {    
            while(s[i]!=' ' && i<s.size())          //вычисление первого пробела после слова
                i++;
            cout<<s.substr(first, i)<<endl;         //вывод слова 
            while(s[i]==' ' && i<s.size())          //вычисление первой буквы следующего слова(если стоят несколько пробелов подряд)
                i++;
            first=i;                                //первая буква в следующем слове
            i++;                                    //вторая буква в слове
        } 
        else
            i++;
        if(s[i]==' ')
        {
            while(s[i]==' ' && i<s.size())          //вычисление первой буквы следующего слова(если стоят несколько пробелов подряд)
                i++;
            first=i;                                //первая буква в следующем слове
            i++;                                    //вторая буква в слове
        }    
    }
    return 0;
}
