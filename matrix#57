#include <iostream>
#include <math.h>
#include <stdlib.h>
#include <iomanip>
using namespace std;
int main()
{
    int n(7), m(5), mx, mn, strokaMax, strokaMin, stolbMax, stolbMin;
    //cout<<"Matrix"<<endl;
    int mas[n][m]={{ -25,  0, 101, 84, -84},
                   {-621, -8,  90,  9,  61},    
                   { -55,  2,  88,  4,   5},
                   { -69,  9,  87,  9,   1},
                   {-100, 32, 123, 47,  14},
                   { -15,  7,  99, 57,  87},
                   { -13, 79,  88, 28,   0}};
                  
    cout<<endl<<endl;     
    int f1(0), f2(0);                   //флажки
    for(int i=0; i<n; i++)                          
    {   
        mx=mas[i][0];                   //локальный максимум в строке
        mn=mas[i][0];                   //локальный минимум в строке       
        strokaMax=0;                    //подготовка к иттерации                 
        strokaMin=0;                    //подготовка к иттерации 
        stolbMax=0;                     //подготовка к иттерации 
        stolbMin=0;                     //подготовка к иттерации 
        for(int j=1; j<m; j++)
            if(mas[i][j]>mx)                                //поиск индекса столбца в строке с наибольшим значением
                { mx=mas[i][j]; stolbMax=j; }
            else
                if(mas[i][j]<mn)                            //поиск индекса столбца в строке с наименьшим значением
                    { mn=mas[i][j]; stolbMin=j; }           
                
        for(int j=0; j<n; j++)
            if(mas[j][stolbMax]<mx)                         //проверка элемента на минимум в столбце 
                { f1=1; break; }                            //поднятие флажка и остановка
        for(int j=0; j<n; j++)
            if(mas[j][stolbMin]>mn)                         //проверка элемента на максимум в столбце
                { f2=1; break; }                            //поднятие флажка и остановка
            
        if(f1==0)
            cout<<'('<<i<<", "<<stolbMax<<')'<<' ';         //вывод седловой точки
        if(f2==0)
            cout<<'('<<i<<", "<<stolbMin<<')'<<' ';         //вывод седловой точки
        f1=0;                                               //подготовка к след иттерации
        f2=0;                                               //подготовка к след иттерации
    }               
    return 0;
}
