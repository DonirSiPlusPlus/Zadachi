#include <iostream>
#include <string>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");
    string S1, s2("");
    int i(0);
    cout<<"Введите строку"<<endl;
    getline(cin, S1);               //ввод строки 
    while(i<S1.size()-1)          
    {
        for(int j=i+1; j<S1.size(); j++)        //проход по слову 
        {
            if(S1[i]==S1[j])        //поиск совпадений с первой буквой
            {                      
                while(S1[j]!=' ' && j<S1.size())//переход к пробелу
                    j++;
                s2+=S1.substr(i, j)+' ';//копирование слова во вторую строку 
                i=j;
                break;              //остановка поиска 
            }
            else
                if(S1[j]==' ')      //выход за пределы слова
                    { i=j; break; } 
        }
        while(S1[i]==' ' && i<S1.size()-1)//вычисление первой буквы следующего слова если стоят несколько пробелов
            i++;
    }        
    cout<<"Слова с совпадениями"<<endl<<s2;  // вывод строки 
    return 0;
}
/*
Тесты
"fifa  effr  LoL" -> fifa LoL"
"ref kogk   jef  jebj" -> "kogk jebj"
*/
