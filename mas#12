#include <iostream>
using namespace std;
int main()
{
    int mas[99];
    int n, sum(0), k(0), nomer1(-1), nomer2(-1);
    double sred;
    cin>>n;

    cout<<"Massiv"<<endl;
    for(int i=0; i<n; i++)
        cin>>mas[i];

    for(int i=0; i<n; i++)
        if(mas[i]==0)
            if(nomer1==-1)      //чтобы запомнить нули в разных переменных
                nomer1=i;       //номер первого нуля в массиве
            else
                nomer2=i;       //номер второго нуля в массиве

    if(nomer2-nomer1==1 || nomer1==-1 || nomer2==-1)    //нули рядом или он один
            cout<<"NO"<<endl;
    else
        for(int i=nomer1; i<nomer2; i++)
        {
            sum+=mas[i];    //сумма цифр
            k++;            //количество цифр
        }

    if(sum)
    {
        sred=sum/(k-1);     //среднее значение
        cout<<"Srednee = "<<sred;
    }
    return 0;
}
