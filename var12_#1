#include <iostream>
using namespace std;
int main()
{
    int x,x7(0),ost,razr(1),numb(0),k(0),naim;
    cin>>x;
    
    naim=x%7;   //наим цифра в семиричном числе
    
    while(x>0)
    {
        ost=x%7;
        x7+=ost*razr;
        razr*=10;
        x/=7;
        
        k++; //счётчик количества цифр в семиричном числе
        
        if(ost<=naim)  //сравнение каждой цифры в семиричном числе
            {
                numb=k-1;   //количество цифр перед цифрой с наим значением
                naim=ost;   //новая наим цифра в семиричном числе
            }
    }
    
    cout<<"x7 = "<<x7<<endl<<k-numb;   //вывод семиричного числа и порядка цифры с наим значением
    return 0;
}
